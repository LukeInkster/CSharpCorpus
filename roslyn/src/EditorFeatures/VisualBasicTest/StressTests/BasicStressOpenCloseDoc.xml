<?xml version="1.0" encoding="utf-8" ?>
<TaoTest xmlns="http://microsoft.com/schemas/VSLanguages/TAO">
  <InitTest>
    <StartTarget />
    <AddProject ProjectName="TestProj" LanguageName="Visual Basic" />
    <AddItem ProjectName="TestProj" FileName="test.vb" />
    <CloseFile />
    <SendKeys>^%l</SendKeys>
    <SendKeys>test.vb</SendKeys>
  </InitTest>

  <ScenarioList>

    <Scenario Name="Open/Close Document">
      <SendKeys>{ENTER}</SendKeys>
      <Wait Seconds="3" />
      <SendKeys>^{F4}</SendKeys>
      <Wait Seconds="3"/>
    </Scenario>

  </ScenarioList>

  <CleanupScenario>
    <ForceGC />
    <LogStressData />
  </CleanupScenario>

  <CleanupTest>
    <ForceGC />
    <CloseTarget />
  </CleanupTest>
</TaoTest>
