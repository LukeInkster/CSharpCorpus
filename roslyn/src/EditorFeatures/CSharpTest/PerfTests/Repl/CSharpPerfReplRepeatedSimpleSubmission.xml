<?xml version="1.0" encoding="utf-8" ?>
<TaoTest xmlns="http://microsoft.com/schemas/VSLanguages/TAO">
  <InitTest>
    <StartTarget />
    <InteractiveWindow />
  </InitTest>

  <ScenarioList>

    <Scenario Name="REPL - Repeated Submission" Description="Repeated Simple Submission">
      <StartMeasure ScenarioGroup="REPL - Repeated Submission" Step="Repeated Simple Submission"/>
      <SubmitReplText>2 + 2</SubmitReplText>
      <VerifyReplOutput>4</VerifyReplOutput>
      <SendKeys>%{UP}</SendKeys>
      <ExecuteSubmission/>
      <VerifyReplOutput>4</VerifyReplOutput>
      <SendKeys>%{UP}</SendKeys>
      <ExecuteSubmission/>
      <VerifyReplOutput>4</VerifyReplOutput>
    </Scenario>

  </ScenarioList>

  <CleanupScenario>
    <StopMeasure />
  </CleanupScenario>

  <CleanupTest>
    <CloseTarget />
  </CleanupTest>
</TaoTest>