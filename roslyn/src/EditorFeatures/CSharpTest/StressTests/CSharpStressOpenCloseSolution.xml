<?xml version="1.0" encoding="utf-8" ?>
<TaoTest xmlns="http://microsoft.com/schemas/VSLanguages/TAO">
  <InitTest>
    <StartTarget />
  </InitTest>

  <ScenarioList>

    <Scenario Name="Open/Close Solution">
      <AddProject ProjectName="TestProj" LanguageName="C#" />
      <AddItem ProjectName="TestProj" FileName="test.cs" />
      <OpenFile FileName="test.cs" />
      <Wait Seconds="5" />
      <CloseFile />
      <CloseSolution />
      <Wait Seconds="5"/>
    </Scenario>
    
  </ScenarioList>

  <CleanupScenario>
    <ForceGC />
    <LogStressData />
  </CleanupScenario>

  <CleanupTest>
    <ForceGC />
    <CloseTarget />
  </CleanupTest>
</TaoTest>
